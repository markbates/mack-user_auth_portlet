<%= render(:partial, :bio_photo) %>
<p>
  <h1><%= @user_profile.display_name %></h1>
</p>
<p>
  <%= :user.label_tag :created_at, :value => 'Member Since' %>
  <%= format_date_time(@user.created_at) %>
</p>
<p>
  <%= :user_profile.label_tag :birthdate %>
  <%= format_date(@user_profile.birthdate) %>
</p>
<p>
  <%= :user_profile.label_tag :bio, :value => 'Biography' %>
  <div id='user_auth_bio'>
    <% unless @user_profile.bio.blank? -%>
      <%= simple_format @user_profile.bio %>
    <% else -%>
      <p>There is no biography yet for this user.</p>
    <% end -%>
  </div>
</p>

